{
  "name": "cartsaver-backend",
  "version": "1.0.0",
  "description": "Backend API for CartSaver trolley management system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node src/config/migrate.js",
    "migrate:indexes": "node run-migration.js",
    "migrate:gps": "node src/scripts/runMigrations.js up",
    "migrate:gps:down": "node src/scripts/runMigrations.js down",
    "seed": "node src/config/seed.js",
    "test": "jest --coverage"
  },
  "keywords": [
    "trolley",
    "rfid",
    "inventory",
    "management"
  ],
  "author": "CartSaver Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.9",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.4",
    "redis": "^5.8.3",
    "sequelize": "^6.35.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
